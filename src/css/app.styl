/* iOS Cordova Tweak */
.device-cordova.device-ios
  height 100vh

/* Your app custom styles here */
.page-content
  background white_l

  &.darkTheme
    background grey_d

.main_cont
  display flex
  flex-direction row
  width 95vw
  margin 0px auto
  padding 0px

  .left_pan
    width 15vw
    max-width 300px
    min-width 165px
    no-mar-no-pad()
    padding-bottom 15px

  .right_pan
    width 10vw
    max-width 400px
    min-width 200px
    no-mar-no-pad()
    margin-left -10px
    margin-right 10px
    padding-bottom 15px

  .center_pan
    width 45vw
    padding 20px 10px 15px 10px !important
    min-width 620px
    no-mar-no-pad()
    z-index 3

  /* @media (min-width: 480px)
  @media (min-width: 568px)
  @media (min-width: 768px) 
  @media (min-width: 1024px) */
  @media (min-width 1200px)
    width 70vw

.uppercase
  text-transform uppercase