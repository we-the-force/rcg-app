/* iOS Cordova Tweak */
.device-cordova.device-ios
  height 100vh

/* Your app custom styles here */
.page-content
  background white_l

  &.darkTheme
    background grey_d

.uppercase
  text-transform uppercase

.main_cont
  width auto
  // width fit-content //active
  margin 0px auto
  padding 0px

  .paneles
    display flex
    flex-direction row
    width 100%
    margin auto
    padding 0px

    .center_pan
      margin 0px
      padding 5px 10px
      width 100%
      z-index 3

      .ads_cont
        display flex
        width 100%
        no-mar-no-pad()

        .left, .right
          display none

        .center
          width 100%
          margin 10px
          padding 0px
          position relative
          height 0
          padding-top calc(60 / 468 * 100%)

          .ads
            position absolute
            top 0
            left 0
            width 100% !important
            height 100% !important
            margin 0px

    .left_pan
      display none

    .right_pan
      display none

    @media (min-width 640px)
      .center_pan
        width auto
        padding-left 0px

      .left_pan
        display block
        width 90px
        min-width 90px
        padding 0px
        margin 0px

      .right_pan
        display block
        min-width 45px
        width 45px
        padding 0px

  @media (min-width 1024px)
    max-width 1200px

    .paneles
      .left_pan
        width 14%
        min-width 170px

      .right_pan
        width 18%
        min-width 220px

