/* iOS Cordova Tweak */
.device-cordova.device-ios
  height 100vh

.md
  --f7-block-text-color #000000

/* Your app custom styles here */
.page-content
  background white_l
  padding-bottom 100px

  @media (min-width 640px)
    padding-bottom 0px

.uppercase
  text-transform uppercase

.lowercase
  text-transform lowercase

.main_cont
  width auto
  margin 0px auto
  padding 0px

  .paneles
    display flex
    flex-direction row
    width 100%
    margin auto
    padding 0px

    .center_pan
      min-height calc(100vh - 60px)
      margin 0px
      padding 5px 10px
      width 100%
      z-index 3

      .ads_cont
        display flex
        width 100%
        no-mar-no-pad()

        .left, .right
          display none

        .center
          width 100%
          margin 10px
          padding 0px
          position relative
          height 100%

          &:after
            content ''
            display flex
            padding-top calc(60 / 468 * 100%)

          .ads
            position absolute
            top 0
            left 0
            width 100% !important
            height 100% !important
            margin 0px

    .left_pan
      display none

    .right_pan
      display none

    @media (min-width 640px)
      .center_pan
        width calc(100% - 135px) !important
        padding-left 0px

        &.wo_right_pan
          width calc(100% - 90px) !important
          padding-left 10px
          padding-right 10px

      .left_pan
        display block
        width 90px
        min-width 90px
        padding 0px
        margin 0px

      .right_pan
        display block
        min-width 45px
        width 45px
        padding 0px
        margin 0px

  @media (min-width 1024px)
    max-width 1200px

    .paneles
      .center_pan
        width calc(100% - 410px) !important
        padding-right 0px
        padding-left 0px

        &.wo_right_pan
          width calc(100% - 190px) !important

      .left_pan
        width 14%
        min-width 190px

      .right_pan
        width 18%
        min-width 220px
        margin 0px
