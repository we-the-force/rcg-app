font-template(w, f, l)
    font-family "Product Sans"
    font-style normal
    font-weight w
    font-size f
    line-height l

center-absolute()
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

no-mar-no-pad()
    margin 0px
    padding 0px

font_mix(w = normal, s = 14px, h = 16px, f = "Product Sans")
    font-family f
    font-style normal
    font-weight w
    font-size s
    line-height h