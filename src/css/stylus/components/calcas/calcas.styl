.calca_panel
    .title
        margin 0px
        margin-top 20px
        margin-bottom 15px
        padding 0px

        p
            font font_10
            text-transform capitalize
            color #000
            text-align center
            width 100%
            margin 0px

    .bottom
        margin 15px 20px
        padding 0px

        p
            width 100%
            margin 0px
            padding 0px
            font font_4
            text-align center
            color #000

            b
                font-weight 500

    .card
        padding 5px

        .back
            margin 0px
            border-radius 6px
            background #F0F0F0
            padding 14px 7px
            padding-bottom calc(100 / 345 * 100%) !important

            .categoria_cont
                background #fff
                margin 0px
                padding 2px 30px 2px 6px
                width fit-content

                p
                    color red
                    text-align center
                    text-transform capitalize
                    font font_14

            .city
                width 100%
                position absolute
                bottom 0
                left 0
                z-index -1

            .logo_cont
                position absolute
                bottom 0
                right 0
                margin 7px
                width 90px

                &:after
                    content ''
                    display block
                    padding-top calc(50 / 100 * 100%)

                img
                    position absolute
                    bottom 0
                    right 0
                    width 100%
                    height 100%

            form
                z-index 1

                .input
                    margin 15px 0px
                    padding 0px

                    input
                        height 25px
                        background #FFFFFF
                        box-shadow 0px 0px 6px rgba(0, 0, 0, 0.08)
                        border-radius 15px

                    &:after
                        content none

    @media (min-width 640px)
        .card
            .back
                .categoria_cont
                    p
                        font font_3