.left_panel_cont
    display none

    @media (min-width 1024px)
        display block
        position sticky
        top var(--f7-navbar-height)
        no-mar-no-pad()
        padding-top 20px
        padding-left 10px
        padding-right 10px
        filter drop-shadow(0px 0px 6px rgba(0, 0, 0, 0.1))
        max-height calc(100vh - 70px)
        overflow-y scroll

        &::-webkit-scrollbar
            display none

        .more
            margin 10px 0px
            padding 0px 5px

            .flex_wrap
                flex-wrap wrap

            a, p
                white-space nowrap
                margin 2px
                font font_4
                color #606060

        .theme
            margin 10px 0px
            padding 0px 7px

            a
                color #606060
                font font_14

                i
                    padding-left 5px
                    color #606060
                    font-size 12px

                    &.dark
                        display none

                    &.light
                        display inline-block