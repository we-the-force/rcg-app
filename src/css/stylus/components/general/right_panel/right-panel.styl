.right_panel_cont
    display none

    @media (min-width 1024px)
        display block
        height 100%
        no-mar-no-pad()

        .search_block
            position sticky
            top var(--f7-navbar-height)
            padding 20px 0px 15px 0px
            margin 0px
            background white_l
            z-index 2

            .search_cont
                padding 0px
                margin 0px auto
                height 28px
                width calc(100% - 20px)

                input
                    width 100%
                    height 100%
                    background white
                    border none
                    border-radius 6px
                    font font_3
                    color #191919
                    text-transform none
                    padding 0px
                    padding-left 36px
                    box-sizing border-box

                input::placeholder
                    color #D0D0D0

                span
                    position absolute
                    top 0
                    left 0
                    margin-left 6px
                    margin-right 6px
                    margin-top 2px
                    color #d0d0d0

            .ads
                border-radius 8px
                width calc(100% - 20px)

        .right_panel_down
            position sticky
            top -520px
            filter drop-shadow(0px 0px 6px rgba(0, 0, 0, 0.1))
            no-mar-no-pad()
            .sat
                width 100%