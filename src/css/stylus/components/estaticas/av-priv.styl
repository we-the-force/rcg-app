.av_priv_panel
    .card
        padding 5px

        .back
            margin 0px
            border-radius 6px
            background #F0F0F0
            padding 9px
            padding-bottom calc(150 / 345 * 100%) !important

            .block-header
                display flex
                justify-content space-between
                align-items flex-start
                margin-bottom 15px

                .img_cont
                    position relative
                    margin-right 20px
                    width 12vw
                    max-width 60px
                    min-width 45px

                    &:after
                        content ''
                        display block
                        padding-top calc(53 / 45 * 100%)

                    img
                        position absolute
                        top 0
                        tight 0
                        width 100%
                        height 100%
                        margin 0px

                h1
                    font font_12
                    color #000000
                    text-transform uppercase
                    width 35%
                    margin 0px

            .city
                width 100%
                position absolute
                bottom 0
                left 0
                z-index 0

            .logo_cont
                position absolute
                bottom 0
                right 0
                margin 7px
                width 110px

                &:after
                    content ''
                    display block
                    padding-top calc(50 / 100 * 100%)

                img
                    position absolute
                    bottom 0
                    right 0
                    width 100%
                    height 100%

        @media (min-width 640px)
            .back
                padding 15px

                .block-header
                    margin-bottom 35px

                    h1
                        font font_25
                        width 35%

                    .img_cont
                        max-width 75px

        @media (min-width 1024px)
            .back
                padding 20px

                .block-header
                    margin-bottom 45px