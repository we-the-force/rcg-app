.contacto_panel
    .card
        padding 5px

        .back
            margin 0px
            border-radius 6px
            background #F0F0F0
            padding 9px

            .block-header
                display flex
                justify-content flex-start
                align-items flex-start
                margin-bottom 15px
                padding 0px

                h1
                    font font_16
                    color #000000
                    text-transform uppercase
                    margin 0px
                    padding 0px

            .player-wrapper
                padding 0px
                margin 0px
                margin-left -9px
                width calc(100% + 18px)
                position relative

                &:after
                    content ''
                    display block
                    padding-top calc(832 / 1520 * 100%)

                .player
                    position absolute
                    top 0
                    left 0
                    height 100% !important
                    width 100% !important

            .icons_cont
                padding 0px
                margin 20px auto
                display flex
                justify-content space-between
                align-items center

                .contacto_icon
                    display flex
                    flex-direction column
                    justify-content space-between
                    align-items center
                    width 13vw
                    height 48px
                    padding 0px
                    margin 0px

                    &#radio
                        img
                            width 31px
                            height 33px

                    &#tv
                        img
                            width 25px
                            height 25px

                    &#espect
                        img
                            width 28px
                            height 29px

                    &#spantalla
                        img
                            width 29px
                            height 27px

                    &#media
                        img
                            width 33px
                            height 28px

                    p
                        font font_15
                        color #393939
                        text-align center
                        margin 0px
                        padding 0px
                        font-size 8px
                        line-height 10px

            .info
                margin 0px
                padding 0px

                .titulo
                    font font_2
                    text-align center
                    color #000000
                    margin 0px
                    padding 0px

                .text
                    font font_10
                    text-align center
                    color #000000
                    margin 0px
                    padding 0px

                .warning
                    font font_12
                    color red
                    text-align center
                    margin 10px 0px
                    padding 0px

                .parrafo
                    font font_10
                    text-align center
                    color #000000
                    margin 0px
                    padding 0px

            form
                display flex
                flex-direction column
                justify-content flex-start
                margin 35px 0px
                z-index 1

                .titulo
                    width fit-content
                    background #ffffff
                    padding 3px 24px 3px 6px
                    margin-bottom 30px

                    p
                        font font_23
                        color red
                        text-transform capitalize
                        margin 0px

                .input
                    margin 0px
                    margin-bottom 10px
                    padding 0px
                    z-index 1

                    input, textarea
                        height 25px
                        background #FFFFFF
                        box-shadow 0px 0px 6px rgba(0, 0, 0, 0.08)
                        border-radius 15px
                        padding-left 12px

                    textarea
                        min-height 150px !important
                        padding-left 12px
                        padding-right 17px
                        padding-top 4px
                        padding-bottom 4px

                    textarea::placeholder
                        padding-top 4px

                    input::placeholder, textarea::placeholder
                        color #E2E2E2
                        text-transform capitalize
                        font font_8

                    .input-error-message
                        padding-left 12px

                    .input-clear-button
                        height 25px
                        top 0
                        margin-top 0px

                        &:after
                            font-size 12px
                            height 12px
                            width 12px
                            position absolute
                            top 50%
                            transform translate(-3px, -50%)

                    &.input-invalid
                        margin-bottom 25px

                        input, textarea
                            box-shadow 0px 0px 6px rgba(255, 0, 0, 0.3)

                    &:after
                        content none

                .enviar
                    width 100px
                    height 22px
                    margin-top 10px
                    margin-bottom 0px

                    input
                        padding 0px
                        font font_15
                        text-align center
                        text-transform capitalize
                        color #fff
                        border none
                        width 100%
                        height 100%
                        background linear-gradient(360deg, #EC1E26 0%, #FF686E 101.14%), #EC1B23
                        box-shadow 0px 0px 6px rgba(0, 0, 0, 0.08)
                        border-radius 15px

            .parrafo_bottom
                margin 0px
                padding 0px
                margin-bottom 25px

                p
                    font font_8
                    text-align center
                    color #000000
                    margin 0px

            .parrafo_red
                margin 0px
                padding 0px
                margin-bottom 10px
                font font_2
                color red
                text-align center

        @media (min-width 640px)
            .back
                padding 17px 24px 30px 24px

                .block-header
                    justify-content center
                    margin-bottom 20px

                    h1
                        font font_12

                .player-wrapper
                    margin-left 0px
                    width 100%

                .icons_cont
                    margin 40px auto
                    justify-content space-evenly

                    .contacto_icon
                        width auto
                        height 78px
                        justify-content flex-end

                        p
                            margin-top 15px

                        &#radio
                            img
                                width 49px
                                height 52px

                        &#tv
                            img
                                width 40px
                                height 40px

                        &#espect
                            img
                                width 45px
                                height 47px

                        &#spantalla
                            img
                                width 47px
                                height 43px

                        &#media
                            img
                                width 53px
                                height 45px

                .info
                    .titulo
                        font font_16

                    .text
                        font font_16
                        font-weight normal

                    .warning
                        font font_25
                        margin 14px 0px

                    .parrafo
                        margin 0px 45px

                form
                    margin 60px 30px 45px 30px

                    .titulo
                        padding 3px 30px 3px 10px
                        margin-bottom 25px

                        p
                            font font_3

                    .input
                        margin-bottom 15px

                    .enviar
                        margin 0px

                .parrafo_bottom
                    margin-bottom 30px

                    p
                        font font_10

        @media (min-width 1024px)
            .back
                padding 10px

                .block-header
                    justify-content flex-start
                    padding-left 10px
                    margin-bottom 20px

                    h1
                        font font_25
                
                .icons_cont
                    margin 45px auto

                form
                    margin 45px 5px 20px 5px