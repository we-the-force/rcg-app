.der_replica_panel
    .card
        padding 5px

        .back
            margin 0px
            border-radius 6px
            background #F0F0F0
            padding 7px
            padding-bottom calc(160 / 345 * 100%) !important

            .block-header
                margin-bottom 18px

                h1
                    font font_12
                    color #000000
                    text-transform uppercase
                    width 50%
                    margin 0px

            .content
                p
                    margin 0
                    margin-bottom 12px

                .parrafo
                    margin 0px
                    margin-bottom 12px
                    text-transform uppercase

                    .info
                        padding-left 4px
                        display inline-block
                        text-transform none

            .city
                width 100%
                position absolute
                bottom 0
                left 0
                z-index 0

            .logo_cont
                display none
                position absolute
                bottom 0
                right 0
                margin 7px
                width 110px

                &:after
                    content ''
                    display block
                    padding-top calc(50 / 100 * 100%)

                img
                    position absolute
                    bottom 0
                    right 0
                    width 100%
                    height 100%

        @media (min-width 640px)
            .back
                padding 15px

                .block-header
                    margin-bottom 35px

                    h1
                        font font_25
                        width 35%

                .logo_cont
                    display block

        @media (min-width 1024px)
            .back
                padding 20px

                .block-header
                    margin-bottom 45px