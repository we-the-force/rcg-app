no-mar-no-pad()
    margin 0px
    padding 0px

.card
    margin 15px 0px
    border-radius 8px
    box-shadow unset
    background-color white

    &.left_pan_card
        width 100%

        &.envivo, &.radio_card, &.pages, &.social
            .card-header
                font font_1
                font-weight bold
                color red_2 /* add dark */
                text-transform capitalize
                min-height unset
                padding 9px 0px
                margin 0px 8px 0px 14px
                border-bottom 1px solid #EFEFEF

                .icon
                    width 16px
                    height 16px
                    margin 3px 3px 3px 0px

                    img
                        height 100%

            .item-content
                padding-left 10px
                padding-right 8px
                min-height unset

                .item-inner
                    padding 9px 30px 9px 2px
                    min-height unset
                    align-self unset
                    padding-left 2px
                    font font_3
                    color black_2 /* add dark */
                    text-transform capitalize

                    &:before
                        content none

                    &:after
                        background-color #EFEFEF

        &.envivo
            margin-top 0px

            &:after
                background-image url('../static/imgs/card_back_1.png')

        &.radio_card
            &:after
                background-image url('../static/imgs/card_back_2.png')

        &.pages
            /* .item-content
            .item-inner
                padding 9px 30px 9px 2px */
            &:after
                background-image url('../static/imgs/card_back_3.png')

        &.social
            .social_cont
                padding 5px 24px 5px 14px

            &:after
                background-image url('../static/imgs/card_back_4.png')

        &.about
            background-repeat no-repeat
            background-size cover
            background-position center
            background-image url('../static/imgs/card_back_5.png')

            .item-content
                padding-left 10px
                padding-right 10px
                min-height unset

                .item-inner
                    padding 9px 30px 9px 2px
                    min-height unset
                    align-self unset
                    padding-left 4px
                    font font_3
                    color white /* add dark */
                    text-transform capitalize

                    &:before
                        content none

                    &:after
                        background-color #EFEFEF

            &:after
                content none

        &.darkTheme
            background-color grey_d_3

        &:after
            content ''
            position absolute
            top 0
            right 0
            width 100%
            height 100%
            z-index 2
            border-radius 8px
            pointer-events none
            background-position right
            background-repeat no-repeat
            background-size contain

        .card-header:after
            content none

    &.right_panel_down_card
        width calc(100% - 20px)
        margin 0px 10px

        &.destacado
            margin-top 0px
            padding-bottom 20px

            .card-header
                font font_5
                color #1A1A1A /* add dark */
                text-transform capitalize
                min-height unset
                padding 12px 0px
                margin 0px 12px
                border-bottom 1px solid #EBEBEB

        &.tags
            .card-header
                padding 10px 0px
                margin 0px 12px
                border-bottom 1px solid #EBEBEB
                font font_7
                color #1A1A1A
                text-transform capitalize

                &:after
                    content none

            .item-content
                padding-left 10px
                padding-right 8px
                min-height unset

                .item-inner
                    padding 9px 30px 9px 2px
                    min-height unset
                    align-self unset
                    padding-left 2px
                    font font_1
                    color #2AAAE0 /* add dark */
                    text-transform capitalize

                    &:before
                        content none

                    &:after
                        background-color #EBEBEB

            .grey
                .item-inner
                    color #939393

    &.articulo
        width 100%
        margin 0px
        padding 15px
        box-sizing border-box

        .header_cont
            padding 0px

            .card-header
                padding 0px 0px 0px 7px
                min-height unset !important

                a
                    padding-right 10px
                    font font_7
                    text-transform capitalize
                    color #303030

                &:after
                    content none

            .share
                padding 15px 7px 0px 0px

                p
                    font font_3
                    text-transform capitalize
                    color #444444
                    margin 0px

                a
                    padding-left 5px
                    width 25px
                    height 25px

                    img
                        width 100%

        .title_cont
            padding 30px 0px 0px 0px

            .head
                padding 0px 0px 0px 7px
                margin 10px 0px
                font font_8
                color #979797
                text-transform capitalize

                p
                    margin 0px

                .autor
                    color red
                    padding-right 5px

                .fecha
                    padding-left 5px

            .titulo
                padding 0px
                font font_9
                text-transform capitalize
                color #242424
                white-space normal

            .img_cont
                padding 10px 0px
                width 100%

                img
                    width 100%
                    object-fit cover

                .foot
                    padding 0px 0px 0px 7px
                    margin 10px 0px
                    font font_8
                    color #5e5e5e
                    text-transform capitalize

                    p
                        margin 0px

                    .pieTitulo
                        padding-right 5px
                        font-weight bold

                    .pie
                        padding-left 5px

        .content
            margin 0px
            padding 10px 0px

            .right_side
                padding 0px
                width fit-content

                .ads
                    border-radius 8px
                    margin-bottom 20px

            .left_side
                padding 0px 20px

                .articulo_cont
                    padding 0px

                    p
                        margin-top 0px
                        margin-bottom 20px
                        padding 0px
                        font font_8
                        line-height 16px
                        text-align justify
                        text-transform capitalize
                        color black

                    .quotes
                        width 100%
                        height 200px
                        background #FA565D
                        margin-bottom 20px

                        &:after
                            content '\201C'
                            position absolute
                            margin-left 25px
                            margin-right 25px
                            font font_r
                            color white
                            top 0
                            left 0
                            margin-top 15px

                        &:before
                            content '\201D'
                            position absolute
                            margin-left 25px
                            margin-right 25px
                            font font_r
                            color white
                            bottom 0px
                            right 0px
                            margin-bottom -38px

                        .text
                            font_mix(normal, 18px, 20px)
                            color white
                            text-transform capitalize
                            text-align center
                            margin 0px 25px
                            width 100%

                .tags
                    padding 0px
                    font font_8
                    text-transform capitalize
                    margin-bottom 50px

                    p
                        color black
                        font-weight 500
                        margin 0px
                        padding-right 10px
                        white-space nowrap

                    .links
                        padding 0px

                        a
                            font font_8
                            line-height 20px
                            color red
                            padding-right 10px

                .comments
                    width 100%
                    height 150px

                .share
                    padding 10px 0px
                    border-top 0.3px solid #D5D5D5
                    border-bottom 0.3px solid #D5D5D5

                    p
                        font font_3
                        text-transform capitalize
                        color #444444
                        margin 0px

                    a
                        padding-left 5px
                        width 25px
                        height 25px

                        img
                            width 100%

        .ads.bar
            margin-left auto
            margin-right auto

        .recomendados
            margin 40px 0px
            padding 0px

            .head
                padding 0px 0px 10px 0px
                margin-bottom 210px

                h1
                    padding-right 10px
                    margin 0px
                    font font_7
                    text-transform capitalize
                    color #303030

                a
                    font font_10
                    color #2AAAE0
                    margin 0px

            .swiper-container
                position absolute
                width 100%
                bottom 0px