.espectacular_panel
    .card
        padding 5px

        .back
            margin 0px
            border-radius 6px
            background #F0F0F0
            padding 7px

            .block-header
                margin-bottom 22px

                h2
                    font font_12
                    color #000000
                    text-transform capitalize
                    width 50%
                    margin 0px

            .content
                p
                    font font_8
                    color #000000
                
            .img_cont  
                width 100%
                margin 10px 0px
                height 140px

                img 
                    width 100%
                    height 100%
                    border-radius 6px
                    object-fit cover

        &.clientes
            .back
                .content
                    width 100%
                    display grid
                    grid-template-columns 1fr 1fr 1fr
                    margin 0px 
                    padding 0px

                    img 
                        width 100%

    .portada_cont
        width 100%

        img
            width 100%
