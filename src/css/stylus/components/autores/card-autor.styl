.autor_card
    width 100%
    margin 0px
    height 100%

    &:after
        content ''
        display block
        padding-top calc(194 / 170 * 100%)

    .back
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        display flex
        flex-direction column
        justify-content center
        align-items center

        .image_cont
            width 47%
            padding-top calc(80 / 80 * 47%)
            margin-bottom 10px

            img
                position absolute
                top 0
                left 0
                border-radius 50%
                padding 0px
                width 100%
                height 100%
                object-fit cover
                filter drop-shadow(0px 0px 4px rgba(0, 0, 0, 0.35))

        .nombre
            width 100%
            font font_14
            text-align center
            text-transform capitalize
            color #313131
            margin 0px
            margin-bottom 4px

        .noticias
            width 100%
            margin 0px
            padding 0px
            text-align center
            text-transform capitalize
            color #EC1B23
            font font_6
            margin-bottom 13px

        .redes_label
            width 100%
            margin 0px
            padding 0px
            font font_15
            text-align center
            text-transform capitalize
            color #313131
            margin-bottom 6px

        .redes_cont
            margin 0px 
            padding 0px
            width 100%
            display flex
            justify-content space-evenly
            align-items center

            a 
                display flex
                justify-content center
                align-items center
    

    @media (min-width 640px)

        &:after
            content ''
            display block
            padding-top calc(194 / 194 * 100%)

        .back
            .image_cont
                width 42%
                padding-top calc(80 / 80 * 42%)