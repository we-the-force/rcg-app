.left-popup-tablet
    transform translate3d(-100vh, 0, 0) !important
    width 250px !important
    filter drop-shadow(0px 0px 8px rgba(0, 0, 0, 0.25))
    background white
    border-radius 6px !important
    margin 0px !important
    left 31px !important

    &.search-popup
        height 28px

        input
            width 100%
            height 100%
            background white
            border none
            border-radius 6px
            font font_3
            color #191919
            text-transform capitalize
            padding 0px
            padding-left 36px

        input::placeholder
            color #D0D0D0

        span
            position absolute
            top 0
            left 0
            margin-left 6px
            margin-right 6px
            margin-top 2px
            color #d0d0d0

    &.live-popup, &.radio-popup, &.more-popup, &.nosotros-popup
        margin-top 0px
        height fit-content

        .list
            margin 0px
            padding 0px

            ul
                &:last-child
                    .item-content
                        border-bottom none

                .item-content
                    padding 0px
                    margin-left 14px
                    margin-right 14px
                    min-height unset
                    border-bottom 1px solid #E6E6E6

                    .item-inner
                        padding 12px 30px 12px 0px
                        min-height unset
                        align-self unset
                        font font_3
                        color #3e3e3e /* add dark */
                        text-transform capitalize

                        &:before
                            content none

                        &:after
                            background-color #EFEFEF

        &:after
            content ''
            position absolute
            top 0
            right 0
            width 100%
            height 100%
            z-index 2
            border-radius 6px
            pointer-events none
            background-position right
            background-repeat no-repeat
            background-size contain
            background-image url('../static/imgs/card_back_8.png')

    &.radio-popup:after
        background-image url('../static/imgs/card_back_9.png') !important

    &.more-popup:after
        background-image url('../static/imgs/card_back_10.png') !important

    &.nosotros-popup
        .list
            ul
                background transparent
                .item-inner
                    color white !important

        &:after
            z-index 0
            background-repeat no-repeat
            background-size cover
            background-position center
            background-image url('../static/imgs/card_back_5.png')

    &.redes-popup
        height fit-content

        .social_cont
            margin 0px
            padding 11px 49px 11px 16px

            a
                display flex

        &:after
            content ''
            position absolute
            top 0
            right 0
            width 100%
            height 100%
            z-index -1
            border-radius 6px
            pointer-events none
            background-position right
            background-repeat no-repeat
            background-size contain
            background-image url('../static/imgs/card_back_11.png')

    &.modal-in
        transform translate3d(0, 0, 0) !important

.popup-backdrop.invisible
    opacity 0