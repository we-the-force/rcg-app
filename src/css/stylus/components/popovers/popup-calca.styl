.popupCalca
    width 300px
    height 150px
    border-radius 6px
    padding 5px

    .back
        width 100%
        height 100%
        border-radius 6px
        margin 0px
        background #F0F0F0
        padding 0px

        .button
            width 100px
            height 22px
            background linear-gradient(360deg, #EC1E26 0%, #FF686E 101.14%), #EC1B23
            box-shadow 0px 0px 6px rgba(0, 0, 0, 0.08)
            border-radius 15px
            padding 0px
            font font_15
            text-align center
            text-transform capitalize
            color #fff