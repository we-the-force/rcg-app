.menuPopup
    height 89vh
    overflow visible

    .page-content
        padding 0px

        .grid
            height 100%
            display grid
            grid-gap 1px 1px
            grid-template-columns 1fr 1fr
            grid-template-rows 30px repeat(4, auto)
            background #dedede

            .box
                background white

                .block
                    margin 0px
                    padding 15px 25px

                    .block-header
                        margin 0px
                        display flex
                        align-items center
                        justify-content left
                        margin-bottom 5px

                        p
                            font font_7
                            color #434343
                            margin 0px

                        img
                            margin-right 7px

                    .link
                        text-transform capitalize
                        color #3A3A3A
                        font font_8
                        line-height 30px
                        width 100%
                        justify-content left

                    .redes
                        width 35px
                        height 35px
                        display inline-flex
                        align-items center
                        justify-content center
                        margin-right 5px

            .foot
                grid-column 1 / 3

                .block
                    padding 15px 0px

                    .link
                        width fit-content !important
                        margin 0px 5px
                        color #2F2F2F
                        font font_4

                p
                    color #2F2F2F
                    font font_4
                    margin 0px 5px

            .searchbar
                grid-column 1 / 3
                width 100% !important
                margin 0px !important

                .searchbar-inner
                    padding 0px

                .searchbar-icon
                    left 50%
                    top 50%
                    transform translate(-275%, -50%) scaleX(-1)

                ::placeholder
                    text-align center
                    font font_3
                    color #919191

                .input-with-value ~ .searchbar-icon
                    display none

                input
                    text-align center
                    background white_l
                    border-radius 0px !important

    &.modal-in
        transform translate3d(0, 11vh, 0)

    @media (orientation landscape)
        height 80vh

        &.modal-in
            transform translate3d(0, 20vh, 0)

    @media (min-height 640px)
        height 80vh

        &.modal-in
            transform translate3d(0, 20vh, 0)

    @media (min-height 730px)
        height 70vh

        &.modal-in
            transform translate3d(0, 30vh, 0)

    @media (min-height 810px)
        height 65vh

        &.modal-in
            transform translate3d(0, 35vh, 0)