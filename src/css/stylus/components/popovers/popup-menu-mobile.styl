.menuPopup
    height 80vh
    overflow visible
    z-index 0

    .page-content
        padding 0px

        .grid
            height 100%
            display grid
            grid-gap 1px 1px
            grid-template-columns 1fr 1fr
            grid-template-rows 30px repeat(4, auto)
            background #dedede

            .box
                background white

                .block
                    margin 0px
                    padding 15px 20px

                    // padding-right 10px
                    .block-header
                        margin 0px
                        display flex
                        align-items center
                        justify-content left
                        margin-bottom 5px

                        p
                            font font_7
                            color #434343
                            margin 0px

                        img
                            margin-right 7px

                    .link
                        text-transform capitalize
                        color #3A3A3A
                        font font_8
                        margin 8px 0px
                        width 100%
                        justify-content left
                        text-align left

                    .redes
                        width 35px
                        height 35px
                        display inline-flex
                        align-items center
                        justify-content center
                        margin-right 5px

                &.live
                    .block-header
                        img
                            width 18px
                            height 18px

                &.services
                    .block-header
                        img
                            width 14px
                            height 18px

                &.estaciones
                    .block-header
                        img
                            width 12px
                            height 21px

                &.follow
                    .block-header
                        img
                            width 18px
                            height 15px

                &.RCG
                    .block-header
                        img
                            width 18px
                            height 20px

                &.theme
                    a
                        text-transform capitalize
                        color #3A3A3A
                        font font_8
                        font-weight bold
                        margin 8px 0px
                        width 100%
                        justify-content left
                        text-align left

                        i
                            padding-left 5px
                            color #3A3A3A
                            font-size 12px

                            &.dark
                                display none

                            &.light
                                display inline-block

            .foot
                grid-column 1 / 3

                .block
                    padding 15px 0px
                    padding-bottom 70px

                    .link
                        margin 0px 5px
                        color #2F2F2F
                        font font_4
                        text-align center

                p
                    color #2F2F2F
                    font font_4
                    margin 0px 5px
                    margin-top 4px

            .search_cont
                grid-column 1 / 3
                padding 0px
                margin 0px
                height 35px
                width 100%

                input
                    text-align center
                    width 100%
                    height 100%
                    background #F5F5F5
                    border none
                    font font_3
                    color #191919
                    text-transform none
                    padding 0px
                    box-sizing border-box

                    &.input-with-value ~ span
                        display none

                input::placeholder
                    color #919191

                span
                    position absolute
                    margin-left 6px
                    margin-right 6px
                    margin-top 2px
                    color #919191
                    left 50%
                    top 50%
                    transform translate(-210%, -60%)

    &.modal-in
        transform translate3d(0, 20vh, 0)
        transition transform 400ms ease
        z-index 10501

    &.modal-out
        transition transform 400ms ease, z-index 0ms ease 400ms

    @media (orientation landscape)
        height 80vh

        &.modal-in
            transform translate3d(0, 20vh, 0)

    @media (min-height 640px)
        height 80vh

        &.modal-in
            transform translate3d(0, 20vh, 0)

    @media (min-height 730px)
        height 70vh

        &.modal-in
            transform translate3d(0, 30vh, 0)

    @media (min-height 810px)
        height 65vh

        &.modal-in
            transform translate3d(0, 35vh, 0)