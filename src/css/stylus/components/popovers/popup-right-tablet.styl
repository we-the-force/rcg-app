.right-popup-tablet
    display none

    a.close
        // transform rotate(45deg)
        // position absolute
        // top 0px
        // left -42px
        // width 42px
        // height 42px
        // margin 0px
        // margin-top 9px
        // padding 0px
        // background red
        // border-top-left-radius 50%
        // border-bottom-left-radius 50%
        // display none
        &.mobile
            display inline-flex
            transform  rotate(45deg)
            i
                color red

        i
            font-size 30px
            color white

    h1
        font font_14
        padding 10px 0px
        margin 0px 12px
        color #1A1A1A
        text-transform capitalize

        &:after
            content none

    .news-cont
        no-mar-no-pad()
        height 100%
        padding-bottom 200px
        width 100%
        overflow hidden
        margin-bottom 10px
        overflow-y scroll
        .search_block
            a.link.linkTablet
                width 50%
                display inline-block
                text-align center
                img
                    width auto
                    height 204px

    @media (min-width 640px)
        display block
        width 190px !important
        height calc(100% - 44px) !important
        transform translate3d(42px, 0, 0) !important
        filter drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.25))
        border-radius 6px !important
        margin 0px !important
        left 100% !important
        overflow visible
        max-height calc(100vh - 75px)

        a.close
            position absolute
            top 0px
            left -42px
            width 42px
            height 42px
            margin 0px
            margin-top 9px
            padding 0px
            background red
            border-top-left-radius 50%
            border-bottom-left-radius 50%
            &.mobile
                display none

            i
                font-size 30px
                color white

        h1
            font font_14
            padding 10px 0px
            margin 0px 12px
            color #1A1A1A
            text-transform capitalize

            &:after
                content none

        .news-cont
            no-mar-no-pad()
            height calc(100% - 44px)
            width 100%
            overflow hidden
            margin-bottom 10px
            overflow-y scroll
            .search_block
                padding-left 10px
                padding-right 10px
                a.link.linkTablet
                    width 100%
                    display block
                    text-align center
                    img
                        width 100%
                        height auto
                        margin 0

        &.modal-in
            transform translate3d(-190px, 0, 0) !important

    @media (min-width 1024px)
        display none