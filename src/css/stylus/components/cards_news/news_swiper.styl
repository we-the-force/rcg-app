.news_swiper
    margin 0px !important
    padding 0px
    background red
    border-radius 8px
    display block

    &:after
        content ''
        display block
        padding-bottom 100%

    .cont
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        padding 10px 15px
        display flex
        flex-direction column
        justify-content flex-end
        align-items flex-start

        .block-title
            width 100%
            font font_2
            font-size 10px
            line-height 12px
            // color white
            margin 0px
            white-space normal
            display -webkit-box
            -webkit-line-clamp 3
            -webkit-box-orient vertical
            overflow hidden
            // color #E10512
            // background rgba(255,255,255,0.8)
            color #fff
            background rgba(0,0,0,.8)


            padding 3px

        .block-footer
            display none
            width 100%
            font font_8
            color #E4E4E4
            margin 0px

    img
        position absolute
        width 100%
        height 100%
        object-fit cover
        z-index 0
        border-radius 8px

    @media (min-width 480px)
        .cont
            .block-title
                font-size 12px
                line-height 14px
            .block-footer
                display block

    @media (min-width 640px)
        .cont
            .block-title
                font-size 14px
                line-height 16px
            .block-footer
                display block