.news_swiper
    margin 0px !important
    padding 0px
    background red
    border-radius 8px
    display block

    &:after
        content ''
        display block
        padding-bottom 100%

    .cont
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        padding 10px 15px
        display flex
        flex-direction column
        justify-content flex-end
        align-items flex-start

        .block-title
            width 100%
            font font_2
            color white
            margin 0px
            white-space normal
            display -webkit-box
            -webkit-line-clamp 3
            -webkit-box-orient vertical
            overflow hidden

        .block-footer
            width 100%
            font font_8
            color #E4E4E4
            margin 0px

    img
        position absolute
        width 100%
        height 100%
        object-fit cover
        z-index -1
        border-radius 8px