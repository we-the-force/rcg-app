.grid-cont
    width 100%

    .NewsRel_Cont
        width @width
        padding 0px
        margin 0px
        border-radius 6px


        .top-cont
            position absolute
            top 0
            left 0
            width 100%
            margin 0px
            padding 0px

            .categoria
                margin 10px
                padding-right 15px
                padding-left 5px
                background white
                font font_14
                text-transform capitalize
                color red
                max-width 60%

        .add
            position absolute
            width 100%
            height 100%
            margin 0px
            background red
            padding 0px
            z-index 10
            border-radius 5px
            transition clip-path 0.3s ease-out 0s, background 0.5s ease 0s
        
            .link-target
                display block
                position absolute
                width 100%
                height 100%
                z-index 2

            .content
                z-index 1
                width 100%
                height 100%
                padding 0px
                display flex
                justify-content center
                align-items center

                p
                    font font_8
                    
                    color #191919
                    padding 0px 15%
                    display -webkit-box
                    -webkit-line-clamp 5
                    -webkit-box-orient vertical
                    overflow hidden
                    &:first-letter
                        text-transform capitalize

            .link
                z-index 3
                position absolute
                top 0
                right 0

                .icon
                    color white
                    transition color 0.3s ease-in-out 0s, transform 0.4s cubic-bezier(0.57, 0.01, 0.57, 1.5) 0s

        &.modal-in
            .add
                background white
                clip-path circle(140% at top 20px right 20px)

                .link .icon
                    color red
                    transform rotate(-135deg)

        .bottom-cont
            position absolute
            bottom 0
            left 0
            margin-left 10px
            margin-right 10px
            margin-bottom 7px
            padding 0px

            .title
                font font_16
                color white
                text-shadow 0px 0px 2.60625px rgba(0, 0, 0, 0.35)
                text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000
                display -webkit-box
                // -webkit-line-clamp 2
                -webkit-box-orient vertical
                overflow hidden
                &:first-letter
                    text-transform uppercase

            .block-footer
                margin 0px
                padding 0px

                .fecha
                    font font_6
                    color #DFDFDF
                    text-transform capitalize
                    margin-top 1px
                    margin-bottom 7px

        .content
            position absolute
            top 0
            left 0
            display none

        &:after
            content ''
            display block

        img
            position absolute
            width 100%
            height 100%
            object-fit cover
            border-radius 6px

    @media (max-width 639px)
        .NewsRel_Cont
            .add
                clip-path circle(12.5px at top 22.5px right 22.5px)

                .link
                    margin 10px

                .icon
                    font-size 25px

            &.modal-in
                .add
                    clip-path circle(140% at top 22.5px right 22.5px)

            &.mob-large-sm2
                &:after
                    padding-top calc(833 / 1000 * 100%)

            &.mob-large-small
                &:after
                    padding-top calc(500 / 1000 * 100%)

            &.mob-small
                .bottom-cont
                    .title
                        font font_14

                &:after
                    padding-top calc(500 / 500 * 100%)

    @media (min-width 640px) and (max-width 1023px)
        .NewsRel_Cont
            .top-cont
                .categoria
                    margin 15px

            .add
                clip-path circle(12px at top 24px right 24px)

                .link
                    margin 12px

                .icon
                    font-size 24px

            .bottom-cont
                margin-left 15px
                margin-right 15px
                margin-bottom 9px

            &.tab-2large-sm2
                &:after
                    padding-top calc(833 / 2000 * 100%)

            &.tab-large
                &:after
                    padding-top calc(1000 / 1000 * 100%)

            &.tab-medium
                .bottom-cont
                    .title
                        font font_14

                &:after
                    padding-top calc(500 / 500 * 100%)

    @media (min-width 1024px)
        .NewsRel_Cont
            .top-cont
                .categoria
                    margin 15px

            .add
                clip-path circle(12.5px at top 24.5px right 24.5px)

                .link
                    margin 12px

                .icon
                    font-size 25px

            .bottom-cont
                margin-left 17px
                margin-right 17px
                margin-bottom 11px

            &.desk-2large-large
                .bottom-cont
                    .title
                        font font_20

                &:after
                    padding-top calc(1000 / 2000 * 100%)

            &.desk-large-small
                &:after
                    padding-top calc(500 / 1000 * 100%)

            &.desk-large
                &:after
                    padding-top calc(1000 / 1000 * 100%)

            &.desk-medium
                &:after
                    padding-top calc(666 / 666 * 100%)

            &.desk-small
                .top-cont
                    .categoria
                        margin 13px

                &:after
                    padding-top calc(500 / 500 * 100%)

            &.desk-large-small, &.desk-large, &.desk-medium, &.desk-small
                .bottom-cont
                    .title
                        font font_2