.grid-cont
    width 100%

    .NewsRel_Cont
        width @width
        padding 0px
        border-radius 6px

        .top-cont
            position absolute
            top 0
            left 0
            width 100%
            margin 0px
            padding 0px

            .categoria
                margin 10px
                padding-right 15px
                padding-left 5px
                background white
                font font_14
                text-transform capitalize
                color red

            .add
                float right
                margin 10px
                border-radius 50%
                background red
                height 20px
                width 20px
                position relative
                transition background 0.5s ease-in-out 0s

                i
                    position absolute
                    top -50%
                    left -50%
                    transform translate(50%, 50%)
                    color white
                    font-size 20px
                    transition color 0.5s ease-in-out 0s, transform 0.5s cubic-bezier(0.57, 0.76, 1, 1.49) 0.5s

            &.modal-in
                .add
                    background white
                    i
                        color red
                        transform translate(50%, 50%) rotate(45deg)

        .bottom-cont
            position absolute
            bottom 0
            left 0
            margin-left 10px
            margin-right 10px
            margin-bottom 7px
            padding 0px

            .title
                font font_16
                text-transform capitalize
                color white
                text-shadow 0px 0px 2.60625px rgba(0, 0, 0, 0.35)
                display -webkit-box
                -webkit-line-clamp 2
                -webkit-box-orient vertical
                overflow hidden

            .block-footer
                margin 0px
                padding 0px

                .fecha
                    font font_6
                    color #DFDFDF
                    text-transform capitalize
                    margin-top 1px
                    margin-bottom 7px

        .content
            position absolute
            top 0
            left 0
            display none

        &:after
            content ''
            display block

        img
            position absolute
            width 100%
            height 100%
            object-fit cover
            border-radius 6px

    @media (max-width 639px)
        .NewsRel_Cont
            &.mob-large-sm2
                &:after
                    padding-top calc(833 / 1000 * 100%)

            &.mob-large-small
                &:after
                    padding-top calc(500 / 1000 * 100%)

            &.mob-small
                .bottom-cont
                    .title
                        font font_14

                &:after
                    padding-top calc(500 / 500 * 100%)

    @media (min-width 640px) and (max-width 1023px)
        .NewsRel_Cont
            .top-cont
                .categoria
                    margin 15px

                .add
                    height 22px
                    width 22px
                    margin 15px

                    i
                        font-size 22px

            .bottom-cont
                margin-left 15px
                margin-right 15px
                margin-bottom 9px

            &.tab-2large-sm2
                &:after
                    padding-top calc(833 / 2000 * 100%)

            &.tab-large
                &:after
                    padding-top calc(1000 / 1000 * 100%)

            &.tab-medium
                .bottom-cont
                    .title
                        font font_14

                &:after
                    padding-top calc(500 / 500 * 100%)

    @media (min-width 1024px)
        .NewsRel_Cont
            .top-cont
                .categoria
                    margin 15px

                .add
                    margin 15px
                    height 24px
                    width 24px

                    i
                        font-size 24px

            .bottom-cont
                margin-left 17px
                margin-right 17px
                margin-bottom 11px

            &.desk-2large-large
                .bottom-cont
                    .title
                        font font_20

                &:after
                    padding-top calc(1000 / 2000 * 100%)

            &.desk-large-small
                &:after
                    padding-top calc(500 / 1000 * 100%)

            &.desk-large
                &:after
                    padding-top calc(1000 / 1000 * 100%)

            &.desk-medium
                &:after
                    padding-top calc(666 / 666 * 100%)

            &.desk-small
                .top-cont
                    .categoria
                        margin 13px

                    .add
                        margin 13px

                &:after
                    padding-top calc(500 / 500 * 100%)

            &.desk-large-small, &.desk-large, &.desk-medium, &.desk-small
                .bottom-cont
                    .title
                        font font_2