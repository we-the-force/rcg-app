.card.tv
    margin-top 0px
    padding 16px 12px
    margin-bottom 15px

    .header_cont
        padding 0px
        margin-bottom 30px

        .card-header
            padding 0px

            h1
                margin 0px
                padding 0px
                font font_12
                color grey_d_3
                text-transform capitalize

            .icon
                display none
                color red

            &:after
                content none

        .share
            padding 0px 8px

            p
                font font_22
                text-transform capitalize
                color #000
                margin 0px

            a
                padding-left 5px
                width 20px
                height 20px

                img
                    width 100%
                    height 100%

    .middle-cont
        display flex
        flex-direction column
        align-items flex-start
        padding 0px
        margin 0px

        .program-name
            padding 0px
            margin 0px

            h2
                font font_5
                text-align left
                padding 0px
                margin 0px
                margin-bottom 10px
                text-transform capitalize
                color grey_d

        .player-wrapper
            position relative
            height 100%
            margin-left -12px
            width calc(100% + 24px)
            padding 0
            padding-top calc(780 / 1280 * 100%) // aspect radio

            .player
                position absolute
                top 0
                left 0
                width 100% !important
                height 100% !important

            .icon
                z-index 2
                position absolute
                top 50%
                left 50%
                transform translate(-50%, -50%)

        .programa-desc
            font font_6
            color #303030
            text-align left
            margin 15px 0px 20px 0px
            padding 0px

    .tabla_programacion
        no-mar-no-pad()
        margin-bottom 20px

        .block-header
            margin 0px 0px 10px 0px
            font font_3
            text-transform capitalize
            color grey_d

    .mas_canales
        no-mar-no-pad()
        margin-bottom 20px

        .block-header
            margin 15px 0px
            margin-top 0px
            font font_5
            text-transform capitalize
            color grey_d

        .canal
            padding 0px
            margin-bottom 15px

            .icon_tv
                position absolute
                top 0
                left 0
                width 40px
                height 40px
                background red_2
                border-radius 4px
                overflow hidden

                img
                    width 20px
                    height 20px

                &:before
                    content ''
                    position absolute
                    bottom 0
                    right 0
                    width 60px
                    height 60px
                    background red
                    transform rotate(45deg)
                    z-index -1

            .canal_content
                width 100%
                left 0
                padding 12px 0px 0px 12px
                display flex
                flex-direction column
                box-sizing border-box
                align-items flex-start
                justify-content center

                .image_cont
                    position relative
                    height 100%
                    width 100%
                    &:after
                        content ''
                        display block
                        padding-top calc(125 / 314 * 100%)

                    img
                        position absolute
                        top 0px
                        left 0px
                        padding 0px
                        width 100%
                        height 100%
                        object-fit cover
                        margin 0px
                        border-radius 6px

                .title
                    position relative
                    padding 0px
                    padding-left 5px
                    font font_10
                    margin 0px
                    margin-top 5px
                    text-transform capitalize
                    color #000
                    //text-shadow 0px 0px 4px rgba(0, 0, 0, 0.8)