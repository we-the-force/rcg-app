.right_panel_cont
    height 100%
    no-mar-no-pad()

    .search_block
        position sticky
        top var(--f7-navbar-height)
        padding 20px 0px 15px 0px
        margin 0px
        background white_l
        z-index 2
        
        .ads
            border-radius 8px
            width calc(100% - 20px)

    .right_panel_down
        position sticky
        top -800px 
        filter drop-shadow(0px 0px 6px rgba(0, 0, 0, 0.1))
        no-mar-no-pad()