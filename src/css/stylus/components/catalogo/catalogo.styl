.catalogo_panel
    .card
        padding 5px

        .back
            margin 0px
            border-radius 6px
            background #F0F0F0
            padding 7px

            .block-header
                margin-bottom 10px

                h2
                    font font_16
                    color #000000
                    text-transform uppercase
                    width 100%
                    margin 0px

            .content
                width 100%
                display grid
                grid-template-columns 1fr 1fr
                grid-gap 8px
                margin 0px
                padding 0px

                .img_cont
                    position relative
                    width 100%

                    .name
                        position absolute
                        top 5px
                        left 5px
                        background #fff
                        border-left 2px solid red
                        p
                            font font_15
                            color #000000
                            padding 3px 25px 3px 4px
                            margin 0px
                            display -webkit-box
                            -webkit-line-clamp 2
                            -webkit-box-orient vertical
                            overflow hidden

                    .lugar
                        position absolute
                        bottom 5px
                        left 5px
                        font font_22
                        color #ffffff
                        display -webkit-box
                        -webkit-line-clamp 2
                        -webkit-box-orient vertical
                        overflow hidden
                        margin 0px

                    img 
                        position absolute
                        top 0
                        left 0
                        height 100%
                        width 100%
                        border-radius 6px
                        z-index -1

                    &:after
                        content ''
                        display flex
                        padding-top calc(50 / 50 * 100%)

    .espectaculares_menu
        margin-top 10px
        display flex
        justify-content space-evenly

        .link
            color #ec1b23
            font-size 16px
            display inline-block
            padding 8px

        hr
            margin 8px 0px


    @media (min-width 640px)
        .card
            .back
                padding 10px
                .content
                    grid-template-columns 1fr 1fr 1fr 1fr

