.ios
    .navbar
        .navbar-inner
            overflow hidden

    .NewsHome_cont,.NewsBusqueda_cont
        .content
            .title, .autor
                overflow visible !important
                transition unset

    .photo-browser-page .navbar
        .popup-close
            justify-content flex-end
            padding-right 0px

        .title
            padding-left 10px

    .contacto_panel, .calca_panel
        .input
            &.input-invalid
                margin-bottom 5px !important

            .input-clear-button
                &:after
                    font-size 10px !important
                    line-height 1 !important
                    height 10px
                    width 10px
                    transform translate(-5px, -50%)

    .page-content
        overflow-x hidden